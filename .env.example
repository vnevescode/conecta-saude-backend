# Arquivo de exemplo das variáveis de ambiente
# Copie este arquivo para .env e configure os valores

# ===== APPLICATION SETTINGS =====
APP_NAME="Conecta+Saúde API"
APP_VERSION="2.0.0"
APP_DESCRIPTION="API Backend para análise de pacientes com IA - Conecta+Saúde"
ENVIRONMENT="development"  # development, staging, production

# ===== SERVER SETTINGS =====
HOST="0.0.0.0"
PORT=8082
DEBUG=true

# ===== API CONFIGURATION =====
API_V1_PREFIX="/api/v1"
DOCS_URL="/docs"
REDOC_URL="/redoc"

# ===== CORS SETTINGS =====
ALLOWED_ORIGINS="http://localhost:8082"

# ===== EXTERNAL SERVICES =====
GEMINI_API_KEY="your_gemini_api_key_here"
# Mock classification service URL (para desenvolvimento)
# CLASSIFICATION_SERVICE_URL="http://localhost:8082"

# ===== DATABASE (futuro) =====
DATABASE_URL="postgresql://user:password@localhost:5432/conectasaude"

# ===== AWS SETTINGS (para deploy) =====
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"

# ===== LOGGING =====
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR

# ===== HEALTH CHECK =====
HEALTH_CHECK_TIMEOUT=30